<% layout("/layouts/mainLayout.ejs") %>
    <div class="container-fluid mt-5">
        <div class="row g-5 mx-auto ">
            <% for(let Book of Books) { %>
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-10">
                    <div class="card rounded-3 p-1" style="width: 18rem">
                        <img src="<%= Book.image.url %>" class="card-img-top rounded-3" alt="..."
                            style="height: 20rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= Book.title %>
                            </h5>
                            <p class="card-text fst-italic"> 
                               &#8377; <%= parseInt(Book.price).toLocaleString() %> 
                            </p>
                            <a href="/book/<%= Book._id%>" class="btn btn-primary">See more details</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

    </div>